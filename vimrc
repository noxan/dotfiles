
set encoding=utf8

syntax on

set number
set numberwidth=3
set ruler

set t_Co=256
color wombat256i

set smartindent
set autoindent

set expandtab
set shiftwidth=4
set tabstop=4
set smarttab

inoremap  <Up>     <NOP>
inoremap  <Down>   <NOP>
inoremap  <Left>   <NOP>
inoremap  <Right>  <NOP>
noremap   <Up>     <NOP>
noremap   <Down>   <NOP>
noremap   <Left>   <NOP>
noremap   <Right>  <NOP>
