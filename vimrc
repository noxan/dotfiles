
set encoding=utf8

filetype plugin on
filetype indent on

syntax on
set hlsearch

set number
set numberwidth=3
set ruler
set cursorline
set title

set t_Co=256
color wombat256i

set smartindent
set autoindent

set expandtab
set shiftwidth=4
set tabstop=4
set softtabstop=4
set smarttab

inoremap  <Up>     <NOP>
inoremap  <Down>   <NOP>
inoremap  <Left>   <NOP>
inoremap  <Right>  <NOP>
noremap   <Up>     <NOP>
noremap   <Down>   <NOP>
noremap   <Left>   <NOP>
noremap   <Right>  <NOP>
